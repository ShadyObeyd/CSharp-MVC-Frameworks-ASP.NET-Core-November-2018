@model CHUSKA.Models.Product

<h1 class="text-center">Edit Product</h1>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" class="form-control" placeholder="Price...">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description..."></textarea>
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="product-type-holder mt-4 d-flex justify-content-around">
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Food">
            <label asp-for="Type" class="form-check-label" for="inlineRadio1">Food</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Domestic">
            <label asp-for="Type" class="form-check-label" for="inlineRadio2">Domestic</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Health">
            <label asp-for="Type" class="form-check-label" for="inlineRadio3">Health</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Cosmetic">
            <label asp-for="Type" class="form-check-label" for="inlineRadio4">Cosmetic</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Other">
            <label asp-for="Type" class="form-check-label" for="inlineRadio5">Other</label>
        </div>
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
        <button type="submit" class="btn chushka-bg-color">Edit</button>
        <button type="submit" class="btn chushka-bg-color">Cancel</button>
    </div>
</form>