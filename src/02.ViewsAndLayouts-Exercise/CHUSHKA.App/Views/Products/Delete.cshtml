@model CHUSKA.Models.Product

<h1 class="text-center">Delete Product</h1>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width" asp-controller="Products" asp-action="Delete" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name..." disabled>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Price..." disabled>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description..." disabled></textarea>
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="product-type-holder mt-4 d-flex justify-content-around">
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Food" disabled>
            <label asp-for="Type" class="form-check-label">Food</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Domestic" disabled>
            <label asp-for="Type" class="form-check-label">Domestic</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Health" disabled>
            <label asp-for="Type" class="form-check-label">Health</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Cosmetic" disabled>
            <label asp-for="Type" class="form-check-label">Cosmetic</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Type" class="form-check-input" type="radio" value="Other" disabled>
            <label asp-for="Type" class="form-check-label" for="inlineRadio5">Other</label>
        </div>
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
        <button type="submit" class="btn chushka-bg-color">Delete</button>
        <button type="submit" class="btn chushka-bg-color">Cancel</button>
    </div>
</form>